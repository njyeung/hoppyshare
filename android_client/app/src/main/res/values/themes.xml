<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoppyShare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- HoppyShare Brand Colors -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/secondary_dark</item>
        <item name="colorOnPrimary">@color/brand_white</item>
        
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_muted</item>
        <item name="colorOnSecondary">@color/secondary_darker</item>
        
        <item name="android:colorBackground">@color/brand_white</item>
        <item name="colorOnBackground">@color/secondary_darker</item>
        <item name="colorSurface">@color/brand_white</item>
        <item name="colorOnSurface">@color/secondary_darker</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/secondary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.HoppyShare" parent="Base.Theme.HoppyShare" />
</resources>